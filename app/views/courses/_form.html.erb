<%= form_for @course, html: {class: 'form-horizontal', role: 'form'} do |f| %>
    <%= render 'shared/error_messages', :object => @course %>
    
    <div class="form-group">
      <%= f.label "课程名", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.text_field :name, class: 'form-control', placeholder: "输入课程名" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label "课程属性", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
           <%= f.select :course_type,Course::Coursetype %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label "授课方式", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
         <%= f.select :teaching_type,Course::Teachingtype %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label "考试方式", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
        <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.select :exam_type,Course::Examtype %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label "限选人数", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.text_field :limit_num, class: 'form-control', placeholder: "输入限选人数" %>
        </div>
      </div>
    </div>
    
<script>
//限制文本框只能输入数字
  $(function(){
      $("#course_limit_num").keyup(function(){    
                    $(this).val($(this).val().replace(/[^0-9]/g,''));    
                }).bind("paste",function(){  //CTR+V事件处理    
                    $(this).val($(this).val().replace(/[^0-9]/g,''));     
                }).css("ime-mode", "disabled"); //CSS设置输入法不可用 
});
</script>
  

    <div class="form-group">
      <%= f.label "学分", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.text_field :course_credit, class: 'form-control', placeholder: "输入学分" %>
        </div>
      </div>
    </div>
    
<script>
//限制仅可输入数字与字符
  $(function(){
      $("#course_course_credit").keyup(function(){    
                    $(this).val($(this).val().replace(/[^0-9.]/g,''));    
                }).bind("paste",function(){  //CTR+V事件处理    
                    $(this).val($(this).val().replace(/[^0-9.]/g,''));     
                }).css("ime-mode", "disabled"); //CSS设置输入法不可用 
});
</script>

    <div class="form-group">
      <%= f.label "课时", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.text_field :course_period, class: 'form-control', placeholder: "输入课时" %>
        </div>
      </div>
    </div>
    
<script>
//限制仅可输入数字与字符
  $(function(){
      $("#course_course_period").keyup(function(){    
                    $(this).val($(this).val().replace(/[^0-9.]/g,''));    
                }).bind("paste",function(){  //CTR+V事件处理    
                    $(this).val($(this).val().replace(/[^0-9.]/g,''));     
                }).css("ime-mode", "disabled"); //CSS设置输入法不可用 
});
</script>

    <div class="form-group">
      <%= f.label "教室", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.text_field :class_room, class: 'form-control', placeholder: "输入教室" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label "开课(结课)周", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.text_field :week_begin, class: 'form-control', placeholder: "请输入开课周数" %>
          <%= f.text_field :week_end, class: 'form-control', placeholder: "请输入结课周数" %>
        </div>
      </div>
    </div>
    
     <script>

      $(function(){
         $("#course_week_begin").keyup(function(){    
                    $(this).val($(this).val().replace(/[^0-9]/g,''));    
                }).bind("paste",function(){  //CTR+V事件处理    
                    $(this).val($(this).val().replace(/[^0-9]/g,''));     
                }).css("ime-mode", "disabled"); //CSS设置输入法不可用 
        
         $("#course_week_end").keyup(function(){    
                    $(this).val($(this).val().replace(/[^0-9]/g,''));    
                }).bind("paste",function(){  //CTR+V事件处理    
                    $(this).val($(this).val().replace(/[^0-9]/g,''));     
                }).css("ime-mode", "disabled"); //CSS设置输入法不可用 
        
        
    		$("#course_week_begin").blur(function(){
    			var begintime = $("#course_week_begin").val();
    			var endtime = $("#course_week_end").val();
    			if(begintime > endtime){
    				alert("结课周数不得早于开课周数！");
    				$("#course_week_begin").val("");
    			}
    		});
    		
    			$("#course_week_end").blur(function(){
    			var begintime = $("#course_week_begin").val();
    			var endtime = $("#course_week_end").val();
    			if(begintime > endtime){
    				alert("结课周数不得早于开课周数！");
    				$("#course_week_end").val("");
    			}
    		});
    		
    	});
    </script>
    

    <div class="form-group">
      <%= f.label "周几上课", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.text_field :course_weekday, class: 'form-control', placeholder: "输入开课时间（周几开课）" %>
        </div>
      </div>
    </div>
  <script>
    $(function(){
       //周数必须小于7&&限定数字
     $("#course_course_weekday").keyup(function(){    
      $(this).val($(this).val().replace(/[^1-7]/g,''));    
      }).bind("paste",function(){  //CTR+V事件处理    
     $(this).val($(this).val().replace(/[^1-7]/g,''));     
      }).css("ime-mode", "disabled"); //CSS设置输入法不可用 
            
      	$("#course_course_weekday").blur(function(){
    			var weekday = $("#course_course_weekday").val();
    			if(weekday > 7){
    				alert("输入格式有误！请检查后输入");
    				$("#course_course_weekday").val("");
      	}
      	});
    });
  </script>  
    
  
        <div class="form-group">
      <%= f.label "上课(下课)时间", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.text_field :time_begin, class: 'form-control', placeholder: "输入上课节数" %>
          <%= f.text_field :time_end, class: 'form-control', placeholder: "输入下课节数" %>
        </div>
      </div>
    </div>
    
    <script>
      $(function(){
        
        //开始、结束周为数字&&开始<=结束
         $("#course_time_begin").keyup(function(){    
                    $(this).val($(this).val().replace(/[^0-9]/g,''));    
                }).bind("paste",function(){  //CTR+V事件处理    
                    $(this).val($(this).val().replace(/[^0-9]/g,''));     
                }).css("ime-mode", "disabled"); //CSS设置输入法不可用 
                
         $("#course_time_end").keyup(function(){    
                    $(this).val($(this).val().replace(/[^0-9]/g,''));    
                }).bind("paste",function(){  //CTR+V事件处理    
                    $(this).val($(this).val().replace(/[^0-9]/g,''));     
                }).css("ime-mode", "disabled"); //CSS设置输入法不可用 
        
        $("#course_time_begin").blur(function(){
    			var begintime = $("#course_time_begin").val();
    			var endtime = $("#course_time_end").val();
    			if(begintime > endtime){
    				alert("上课时间不得晚于下课时间！");
    				$("#course_time_begin").val("");
    			}
    		});
        
    		$("#course_time_end").blur(function(){
    			var begintime = $("#course_time_begin").val();
    			var endtime = $("#course_time_end").val();
    			if(begintime > endtime){
    				alert("下课时间不得早于上课时间！");
    				$("#course_time_end").val("");
    			}
    		});
    		
    	});
    </script>
    
    <%= f.submit '提交', class: "btn btn-success btn-block"  %>
    <%= link_to '取消', courses_path, :class => "btn btn-default btn-block" %>

<% end %>
