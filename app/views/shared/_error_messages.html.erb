<% if object.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        表单输入包含 <%= pluralize(object.errors.count, "error") %>.
        <% object.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>      
      </div>
    </div>
<% end %>